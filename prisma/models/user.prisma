model User {
  id        String   @id @default(uuid())
  username  String   @unique @db.VarChar(50)
  password  String   @db.VarChar(255)
  phone     String   @unique @db.VarChar(15)
  email     String   @unique @db.VarChar(100)
  avatar    String?  @db.LongText
  gender    Gender?
  address   String?  @db.VarChar(255)
  dob       DateTime?     
  fullname  String?  @db.VarChar(100)
  status    UserStatus @default(INACTIVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      String   @db.VarChar(50) @default("User")
  roleRel   Role     @relation(fields: [role], references: [name])
  creditRegistration CreditRegistration?
  approvedRegistrations CreditRegistration[] @relation("Approver")
  warehouseManages WarehouseManage[]
  assignedWarehouses WarehouseManage[] @relation("AssignedBy")
  importFabrics      ImportFabric[]    @relation("Importer")
  orders     Order[]
  userNotifications UserNotification[]
  notifications  Notification[]
}