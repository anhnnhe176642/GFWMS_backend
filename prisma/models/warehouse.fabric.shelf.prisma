model FabricShelf {
    shelfId     Int     
    fabricId    Int
    fabric      Fabric    @relation(fields: [fabricId], references: [id])
    shelf       Shelf     @relation(fields: [shelfId], references: [id])
    quantity    Int       @default(0)

    createdAt   DateTime  @default(now())
    updatedAt   DateTime  @updatedAt
    @@id([shelfId, fabricId])
    @@map("fabric_shelf")
}